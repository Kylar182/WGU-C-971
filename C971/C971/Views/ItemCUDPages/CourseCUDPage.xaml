<?xml version="1.0" encoding="utf-8" ?>
<b:BaseItemCUDPage xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:b="clr-namespace:C971.Views.ItemCUDPages;assembly=C971"
                   x:Class="C971.Views.ItemCUDPages.CourseCUDPage"
                   xmlns:vm="clr-namespace:C971.ViewModels.ItemCUDVMs"
                   xmlns:model="clr-namespace:C971.Models.DatabaseModels"
                   Title="{Binding Title}"
                   x:TypeArguments="vm:CourseCUDVM,model:Course"
                   IsBusy="{Binding IsBusy}">

  <ContentPage.BindingContext>
    <vm:CourseCUDVM />
  </ContentPage.BindingContext>
    
  <ContentPage.Resources>
    <ResourceDictionary>
      <Color x:Key="Accent">
        #96d1ff
      </Color>
    </ResourceDictionary>
  </ContentPage.Resources>

  <ContentPage.Content>
    <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" Padding="20" Spacing="4">

      <Entry Text="{Binding Name}" Placeholder="Course Name" HeightRequest="50" FontSize="Small"  />
      <Label TextColor="Red" Text="{Binding NameError}" FontSize="Small" />

      <Editor Text="{Binding Description}" Placeholder="Course Description" FontSize="Small" />
      <Label TextColor="Red" Text="{Binding DescriptionError}" FontSize="Small" />

      <Editor Text="{Binding Notes}" Placeholder="Notes" FontSize="Small" />
      <Label TextColor="Red" Text="{Binding NotesError}" FontSize="Small" />

      <Picker Title="Select the Instructor" SelectedItem="{Binding Instructor}" FontSize="Small" 
              ItemsSource="{Binding Instructors}" ItemDisplayBinding="{Binding Name}" />
      <Label TextColor="Red" Text="{Binding InstructorIdError}" FontSize="Small" />

      <Picker Title="Select the Term" SelectedItem="{Binding Term}" FontSize="Small" ItemsSource="{Binding Terms}" 
              ItemDisplayBinding="{Binding TermTitle}" />
      <Label TextColor="Red" Text="{Binding AcademicTermIdError}" FontSize="Small" />


      <Button Text="SAVE" Command="{Binding Save}" IsEnabled="{Binding Valid}"/>

    </StackLayout>
  </ContentPage.Content>

</b:BaseItemCUDPage>
