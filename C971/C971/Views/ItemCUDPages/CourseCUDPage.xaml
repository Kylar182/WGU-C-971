<?xml version="1.0" encoding="utf-8" ?>
<b:BaseItemCUDPage xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:b="clr-namespace:C971.Views.ItemCUDPages;assembly=C971"
                   x:Class="C971.Views.ItemCUDPages.CourseCUDPage"
                   xmlns:vm="clr-namespace:C971.ViewModels.ItemCUDVMs"
                   xmlns:converters="clr-namespace:C971.Converters"
                   xmlns:model="clr-namespace:C971.Models.DatabaseModels"
                   Title="{Binding Title}"
                   x:TypeArguments="vm:CourseCUDVM,model:Course"
                   IsBusy="{Binding IsBusy}">

  <ContentPage.BindingContext>
    <vm:CourseCUDVM />
  </ContentPage.BindingContext>
    
  <ContentPage.Resources>
    <ResourceDictionary>
      <Color x:Key="Accent">
        #96d1ff
      </Color>
      <converters:EnumConverter x:Key="EnumString"/>
    </ResourceDictionary>
  </ContentPage.Resources>

  <ContentPage.Content>
    <FlexLayout Direction="Column" VerticalOptions="StartAndExpand" Padding="20" 
                JustifyContent="SpaceEvenly">

      <Entry Text="{Binding Name}" Placeholder="Course Name" HeightRequest="50" FontSize="Small"  />
      <Label TextColor="Red" Text="{Binding NameError}" FontSize="Small" />

      <Editor Text="{Binding Description}" Placeholder="Course Description" FontSize="Small"
              AutoSize="Disabled" HeightRequest="75"/>
      <Label TextColor="Red" Text="{Binding DescriptionError}" FontSize="Small" />

      <Editor Text="{Binding Notes}" Placeholder="Notes" FontSize="Small" AutoSize="Disabled" HeightRequest="75" />
      <Label TextColor="Red" Text="{Binding NotesError}" FontSize="Small" />

      <Grid Padding="0,10,0,0">
        <Label Text="Start Date" Grid.Column="0" Grid.Row="0" VerticalOptions="Center" FontSize="Small" />
        <DatePicker Date="{Binding Start}" Grid.Column="1" Grid.Row="0" FontSize="Small" />
        <Label TextColor="Red" Text="{Binding StartError}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
               VerticalOptions="CenterAndExpand" FontSize="Small" />

        <Label Text="End Date" Grid.Column="0" Grid.Row="2" VerticalOptions="Center" FontSize="Small" />
        <DatePicker Date="{Binding End}" Grid.Column="1" Grid.Row="2" FontSize="Small" />
        <Label TextColor="Red" Text="{Binding EndError}" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"
               VerticalOptions="CenterAndExpand" FontSize="Small" />
      </Grid>

      <Picker Title="Select the Instructor" SelectedItem="{Binding Instructor}" FontSize="Small" 
              ItemsSource="{Binding Instructors}" ItemDisplayBinding="{Binding Name}" />
      <Label TextColor="Red" Text="{Binding InstructorIdError}" FontSize="Small" />

      <Picker Title="Select the Term" SelectedItem="{Binding Term}" FontSize="Small" ItemsSource="{Binding Terms}" 
              ItemDisplayBinding="{Binding TermTitle}" />
      <Label TextColor="Red" Text="{Binding AcademicTermIdError}" FontSize="Small" />

      <Picker Title="Select the Status" SelectedItem="{Binding Status}" FontSize="Small" ItemsSource="{Binding Statuses}" 
              ItemDisplayBinding="{Binding ., Converter={StaticResource EnumString}}" />

      <Grid Margin="0,10,0,0">
        <Button Text="SAVE" Command="{Binding Save}" IsEnabled="{Binding Valid}" Grid.Column="0" Grid.Row="0" />
        <Button Text="DELETE" Command="{Binding Delete}" IsEnabled="{Binding CanDelete}" Grid.Column="1" Grid.Row="0"
                Style="{StaticResource Delete}" />
      </Grid>


    </FlexLayout>
  </ContentPage.Content>

</b:BaseItemCUDPage>
